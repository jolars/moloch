% \subsubsection{Footnotes}
%    \begin{macrocode}
\setbeamertemplate{footnote}{%
  \parindent 0em\noindent%
  \raggedright
  \usebeamercolor{footnote}%
  \hbox to 0.8em{\hfil\insertfootnotemark}%
  \insertfootnotetext\par%
}
